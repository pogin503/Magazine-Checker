<div class="row px-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"><i class="fas fa-home"></i></a>
            </li>

            {% if page matches '#^/magazines/.*$#' %}
                <li class="breadcrumb-item">
                    {% if not (page == '/magazines/index') %}<a href="/magazines">{% endif %}
                        雑誌
                    {% if not (page == '/magazines/index') %}</a>{% endif %}
                </li>
            {% endif %}

            {% if page == '/index/about' %}
                <li class="breadcrumb-item">このサイトについて</li>
            {% endif %}

            {% if magazine_info.name %}
                <li class="breadcrumb-item">
                    {{ magazine_info.name }}
                </li>
            {% endif %}
            
        </ol>
    </nav>
</div>