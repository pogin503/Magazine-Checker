<h6>更新日:{{ magazine_last_update }}</h6>
<table class="table table-striped table-sm table-bordered">
    <thead>
    <tr>
        <th class='magazine-title'>雑誌</th>
        <th class='gou'>今号</th>
        <th class='gou'>次号</th>
    </tr>
    </thead>
    {% for key, item in magazine_current_next %}
        <tr>
            {# タイトル #}
            <td class='magazine-title'>
                <a href="{{ item.current['url'] }}" target='_blank'>{{ key }}</a>
                {# ステータスがエラーの場合 #}
                {% if item.status == 0 %}
                    <span class='badge badge-pill badge-danger'>error</span>
                {% endif %}
            </td>
            {# 今号 #}
            <td class="gou {% if item.current['what_day'] == '(今日)' %}table-primary{% endif %}">
                {{ item.current['title'] }}</br>
                <span class="release_date">
                    {{ item.current['release_date'] }}</br>
                    {{ item.current['what_day'] }}
                </span>
            </td>
            {# 次号 #}
            <td class="gou">
                {{ item.next['title'] }}</br>
                <span class="release_date">
                    {{ item.next['release_date'] }}</br>
                    {{ item.next['what_day'] }}
                </span>
            </td>
        </tr>
    {% endfor %}
    {#{{ dump(array) }}#}
</table>